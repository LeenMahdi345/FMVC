@{
    ViewData["Title"] = "Home Page";
}

@section Title{
home
}
@section subTitle{
dont show
}

@model List<Event>


<h2>Events</h2>

<table>
    <tr>
        <th>Event Name</th>
        <th>Location</th>
        <th>Date</th>
        <th>Description</th>
        <th>Reserve</th>
    </tr>

    @foreach (var evnt in Model)
    {
        <tr>
            <td>@evnt.EventName</td>
            <td>@evnt.Location</td>
            <td>@evnt.Date.ToShortDateString()</td>
            <td>@evnt.Description</td>
            <td>
                <form asp-action="ReserveEvent" method="post">
                    <input type="hidden" name="eventId" value="@evnt.EventId" />
                    <button type="submit">Reserve</button>
                </form>
            </td>
        </tr>
    }
</table>
