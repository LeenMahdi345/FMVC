@model List<Event>

@{
    ViewData["Title"] = "My Reservations";
}

<h2>My Reservations</h2>

@if (!Model.Any())
{
    <p>You have not reserved any events yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Location</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evnt in Model)
            {
                <tr>
                    <td>@evnt.EventName</td>
                    <td>@evnt.Location</td>
                    <td>@evnt.Date.ToShortDateString()</td>
                    <td>@evnt.Description</td>
                    <td>
                        <form asp-action="CancelReservation" method="post">
            <input type="hidden" name="eventId" value="@evnt.EventId" />
                            <button type="submit">Cancel Reservation</button>
        </form>
              
            </td>
        </tr>
    }
    </tbody>
</table>
}
